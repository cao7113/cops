#!/usr/bin/env rundklet
add_note <<~Note
  manage docker host or swarm using web UI
  https://github.com/portainer/portainer
  https://portainer.io/install.html
  https://github.com/portainer/portainer-compose
  https://portainer.readthedocs.io/en/latest/deployment.html#secure-portainer-using-ssl
Note

# user/passwd: admin/portainer
register_net
register :appname, 'portainer'
register_docker_image 'portainer/portainer'
register :app_volumes, volumes_root.join('portainer')

#https://portainer.readthedocs.io/en/stable/deployment.html#quick-start
task :main do
  invoke :netup, [], {}

  system <<~Desc
    #{dkrun_cmd(named: true)} -d --restart always \
      -e VIRTUAL_HOST=portainer.lh,p.lh \
      -v /var/run/docker.sock:/var/run/docker.sock \
      -v #{app_volumes}:/data \
      #{docker_image}
    #open http://localhost:9000
  Desc
end

__END__

version: '2'
services:
  portainer:
    image: portainer/portainer
    command: -H unix:///var/run/docker.sock
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - portainer_data:/data
volumes:
  portainer_data:

templates:
  image: portainer/templates
  container_name: "portainer-templates"
  restart: always

portainer:
  image: portainer/portainer
  container_name: "portainer-web"
  restart: always
  command: --templates http://templates/templates.json
  volumes:
    - /var/run/docker.sock:/var/run/docker.sock
    - ~/upnetdata/portainer:/data
  #environment:
    ## nginx vhost
    #- VIRTUAL_HOST=p.cao9.me, portainer.cao9.me
