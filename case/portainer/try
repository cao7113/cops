  #version: '2'
  #services:
    #portainer:
      #image: portainer/portainer
      #command: -H unix:///var/run/docker.sock
      #volumes:
        #- /var/run/docker.sock:/var/run/docker.sock
        #- portainer_data:/data
  #volumes:
    #portainer_data:
#Desc
