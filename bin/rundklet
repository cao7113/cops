#!/usr/bin/env ruby
require_relative '../lib/docker_kit'

file = ARGV[0]
abort "Error: require docklet file!" unless file
$PROGRAM_NAME = file
ARGV.shift
load file

__END__

# another way
class DkletRunner < Thor
  default_command :runlet

  desc 'runlet FILE', ''
  def runlet(file, *_)
    $PROGRAM_NAME = file
    ARGV.shift(2) # shift runlet, file
    load file
  end
end
DkletRunner.start
