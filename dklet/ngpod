#!/usr/bin/env rundklet

# ref https://docs.docker.com/engine/reference/builder/#usage
set_dockerfile <<~Desc
  FROM nginx:1.15-alpine
  LABEL maintainer=dailyops
Desc

set_specfile <<~Desc
  ---
  apiVersion: v1
  kind: Pod
  metadata:
    name: ng
    labels:
      env: development
  spec:
    containers:
    - name: nginx
      image: #{docker_image}
      ports:
      - containerPort: 80
Desc

task :main do
  system <<~Desc
    kubectl create -f #{specfile}
    kubectl get pod ng --show-labels
  Desc
end

before_task :clean do
  system "kubectl delete pod/ng"
end

add_note <<~Note
  https://kubernetes.io/docs/concepts/overview/working-with-objects/labels/#label-selectors
  kubectl label pods labelex owner=michael
  kubectl get pods --show-labels
  kubectl get pods --selector owner=michael
  kubectl get pods -l 'env in (production, development)'
  kubectl create -f ng-pod.yml
Note

let_cli_magic_start!
